    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.Descripcion)
        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
    </div>


    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.FechaExpiracion)
        @Html.TextBoxFor(m => m.FechaExpiracion, new { @class = "form-control", type = "date" })
    </div>
