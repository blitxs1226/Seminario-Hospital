@model WebApplication1.Models.TblLoteProducto

@{
    ViewBag.Title = "Modificar Lote Producto";
}

<h2>@ViewBag.Title</h2>
<hr/>


@using (Html.BeginForm("modificarLoteProducto", "LoteProducto", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
         @Html.HiddenFor(model => model.IdLoteProducto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

           @Html.ValidationMessageFor(model => model.IdLoteProducto, "", new { @class = "text-danger" })
        </div>
    </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.LabelFor(model => model.NoLote, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoLote, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoLote, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaExpiracion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.FechaExpiracion, new { htmlAttributes = new { @class = "form-control",type="datetime" } })
                @Html.ValidationMessageFor(model => model.FechaExpiracion, "", new { @class = "text-danger" })

            </div>
        </div>

        <br/>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



