@model WebApplication1.Models.TblCargo
@{
    ViewBag.Title = "Agregar Cargo";
}

<h2>@ViewBag.Title</h2>
<hr />
@using (Html.BeginForm("AgregarCargo", "Cargo", FormMethod.Post, new { role = "form", @class = "" }))
{
    <div class="mb-3 mt-3">
        @Html.LabelFor(m => m.Cargo)
        @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control" })
    </div>

   
    <button type="submit" class="btn btn-primary">Agregar Cargo</button>
}


