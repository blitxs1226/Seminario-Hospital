@model IEnumerable<WebApplication1.Models.ComprasDetalleViewDetails>

    @{
        ViewBag.Title = "Detalles de Compra";
        int NoOrden = ViewBag.data;
        int Total = ViewBag.total;
        Dictionary<int, Double> Subtotales = ViewBag.Subtotales;
    }

    <h2>@ViewBag.Title</h2>
    <hr />
    <h3>No.Orden:@NoOrden</h3>
    <table class="table table-dark table-hover">

        <thead>

            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Subtotal</th>

        </thead>

            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Producto</td>
                <td>@item.Cantidad</td>
                <td>@item.Precio</td>
                <td>@Subtotales[item.IdProducto]</td>
            </tr>

        }
            <tr>
                <td colspan="3" class="text-center">Total</td>
                <td>@Total</td>
            </tr>
        </table>
<button id="imp" class="btn btn-success"><i class="fa-solid fa-print"></i>&nbsp;Imprimir</button>
@section scripts{
    <script>

        document.getElementById('imp').addEventListener('click', () => {
            window.print();
        });


    </script>
    
    }
