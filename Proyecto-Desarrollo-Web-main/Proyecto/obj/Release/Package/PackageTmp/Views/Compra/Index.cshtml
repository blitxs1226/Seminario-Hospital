@using WebApplication1.Models
@model List<CompraViewModel>
    @{
    ViewBag.Title = "Compras";
    }

    <h2>@ViewBag.Title</h2>
    <hr />


    @if (Model.Count > 0)
{
    <div class="container mt-3">
        <a href="~/Compra/newCompra" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Nueva Compra</a>
        <br />
        <br />
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>No. Orden</th>
                    <th>Fecha Orden</th>
                    <th>Proveedor</th>
                    <th>Gestion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.NoOrden</td>
                    <td>@item.FechaOrden</td>
                    <td>@item.Proveedor</td>
                    <td>
                        <input onclick="document.location.href='@Url.Content("~/Compra/Details/" + item.IdCompras)'" type="button" value="Ver Detalles" class="btn btn-warning" />
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container mt-3">
        <h2>No hay Compras</h2>
    </div>
}


