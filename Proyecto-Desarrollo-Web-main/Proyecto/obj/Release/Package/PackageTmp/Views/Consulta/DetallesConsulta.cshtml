@using WebApplication1.Models
@model List<ConsultasViewModel>
@{
    ViewBag.Title = "Detalles Consulta";
    double Total = ViewBag.Total;
}

<h2>@ViewBag.Title</h2>
<div class="container mt-3">
    @foreach (var c in Model)
    {
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>Paciente</td>
                    <td>@c.Paciente</td>
                </tr>
                    <tr><td>Empleado</td><td>@c.Empleado</td></tr>
                    <tr><td>Clinica</td><td>@c.Clinica</td></tr>
                    <tr><td>Diagnostico</td><td>@c.Diagnostico</td></tr>
                    <tr><td>Receta</td><td>@c.Receta</td></tr>
                
             </tbody>
        </table>
            
            <hr />
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in c.Examenes)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Precio</td>
                        </tr>
                    }
                    <tr>
                        <td colspan="2" class="text-center">Total</td>
                        <td>@Total</td>
                    </tr>
                </tbody>
            </table>
            }
    </div>
